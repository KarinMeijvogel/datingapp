<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="../static/styles/profilepage.css">
	<title>Your profilepage</title>
</head>
<body>
	<main>
		<h1>Your profile</h1>
		<img class="profileImg" src="../static/images/<%= data.photo %>" alt="">
		<p>Naam: <%= data.name %></p>
		<p>Leeftijd: <%= data.age %></p>
		<p>Description: <%= data.desc %></p>
		<br>
		<br>
		<form action="/profilepage.ejs" method="POST">
			<label for="movieTitle">Naam film:</label>
			<input name="movieTitle" type="text" class="movieInput" placeholder="Avengers: Endgame">
			<button type="submit" class="addButton">Voeg film toe</button>
		</form>
		<br>
		<br>
		<h2>Mijn films:</h2>
		<% data.movies.forEach(function(data) {
			%>
			<div class="movieContainer">
				<img class="movieImg" src="<%= data.posterImage %>" alt="<%= data.title %>">
				<div class="infoContainer">
				<p class="movieTitle"><%= data.title %></p>
				<p class="movieDesc"><%= data.description %></p>
				</div>
				<form action="/succes.ejs" method="POST" class="deleteForm">
					<input type="hidden" name="movieTitle" value="<%= data.title %>">
					<button class="deleteButton" type="submit">Verwijder</button>
				</form>
			</div>
			<% }); %>
	</main>

	<%- include ('nav') -%>
	
	<!-- <script src="../static/scripts/profilepage.js"></script> -->
</body>
</html>
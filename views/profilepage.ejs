<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="../static/styles/profilepage.css">
	<title>Your profilepage</title>
</head>
<body>
	<main>
		<h1>Your profile</h1>
		<img class="profileImg" src="../static/images/<%= data.photo %>" alt="">
		<p>Naam: <%= data.name %></p>
		<p>Leeftijd: <%= data.age %></p>
		<p>Description: <% data.desc %></p>
		<br>
		<br>
		<form action="/succes.ejs" method="POST">
			<label for="movieTitle">Naam film:</label>
			<input name="movieTitle" type="text">
			<button type="submit">Voeg film toe</button>
		</form>
		<br>
		<br>
		<h2>Mijn films:</h2>
		<% data.movies.forEach(function(data) {
			%>
			<div>
				<img src="<%= data.posterImage %>" alt="<%= data.title %>">
				<p>Title: <%= data.title %></p>
				<p>Description: <%= data.description %></p>
			</div>
			<% }); %>
	</main>

	<%- include ('nav') -%>
	
</body>
</html>